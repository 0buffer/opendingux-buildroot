#!/bin/sh

. /etc/tvout.conf

if [ -f /etc/local/tvout.conf ]; then
	. /etc/local/tvout.conf
fi

if [ "$1" = "--on" ]; then
	amixer set Speaker off

	echo "$TV_VSYNC" > /sys/devices/platform/jz4740-fb/tv_out_vsync
	tvout --$TV_NORM

elif [ "$1" = "--off" ]; then
	tvout --off
	amixer set Speaker on
fi
